@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    var site = Model.Root().Children().First();
 }
 <section id="header" class="homeview-background">
               <div class="homeview-container">
                    <div class="image-container">
                         <img
                              src="@site.Value("leftHeaderImageUrl")"
                              alt="Fashion-Model-Man-PNG-Image.png"
                         />
                    </div>

                    <div class="head-section-middle">
                         <h1>
                              @site.Value("headerTitle")<br/> @site.Value("headerTitleRow2")
                         </h1>
                        
                         <p>@site.Value("headerSubtitle")</p>
                         <shop-button-component
                              button-title="Shop now"
                              color="#ff7373"
                              hover-color="#ca5d5d"
                         />
                    </div>
                    <div class="image-container-right">
                         <img
                              src="@site.Value("rightHeaderImageUrl")"
                              alt="Fashion-Model-Man-PNG-Image.png"
                         />
                    </div>
               </div>
          </section>